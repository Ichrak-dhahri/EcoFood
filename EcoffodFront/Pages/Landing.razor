@page "/"

<PageTitle>EcoFoodSaver - Ensemble contre le gaspillage alimentaire</PageTitle>

<div class="landing-page">
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="logo">
                <span class="logo-icon">🌱</span>
                <span class="logo-text">EcoFoodSaver</span>
            </div>
            <nav class="nav">
                <a href="#features">Fonctionnalités</a>
                <a href="#howto">Comment ça marche</a>
                <a href="#impact">Notre impact</a>
                <button class="btn-primary" onclick="window.location.href='/signin'">Commencer</button>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">
                    Sauvez la nourriture,
                    <span class="gradient-text">Sauvez la planète</span>
                </h1>
                <p class="hero-subtitle">
                    Partagez vos aliments avant qu'ils n'expirent. Réduisez le gaspillage alimentaire.
                    Créez une communauté solidaire dans votre ville.
                </p>
                <div class="hero-buttons">
                    <button class="btn-large btn-primary">Télécharger l'app</button>
                    <button class="btn-large btn-secondary">En savoir plus</button>
                </div>
                <div class="hero-stats">
                    <div class="stat">
                        <div class="stat-number">15K+</div>
                        <div class="stat-label">Utilisateurs actifs</div>
                    </div>
                    <div class="stat">
                        <div class="stat-number">50K+</div>
                        <div class="stat-label">Aliments sauvés</div>
                    </div>
                    <div class="stat">
                        <div class="stat-number">25 tonnes</div>
                        <div class="stat-label">CO₂ évité</div>
                    </div>
                </div>
            </div>
            <div class="hero-image">
                <div class="hero-phone">
                    <div class="phone-screen">
                        <div class="app-preview">
                            <div class="preview-header">
                                <span>🌱 EcoFoodSaver</span>
                            </div>
                            <div class="preview-card">
                                <div class="preview-img">🥖</div>
                                <div class="preview-info">
                                    <div>Pain complet bio</div>
                                    <div style="font-size: 0.8rem; opacity: 0.7;">Expire demain</div>
                                </div>
                            </div>
                            <div class="preview-card">
                                <div class="preview-img">🧀</div>
                                <div class="preview-info">
                                    <div>Fromage de chèvre</div>
                                    <div style="font-size: 0.8rem; opacity: 0.7;">Expire dans 2 jours</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features">
        <div class="container">
            <h2 class="section-title">Fonctionnalités principales</h2>
            <p class="section-subtitle">Tout ce dont vous avez besoin pour partager et récupérer de la nourriture</p>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">📸</div>
                    <h3>Publier facilement</h3>
                    <p>Prenez une photo, ajoutez les détails et partagez vos aliments en quelques secondes</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">🔍</div>
                    <h3>Recherche locale</h3>
                    <p>Trouvez instantanément les aliments disponibles près de chez vous</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">📅</div>
                    <h3>Réservation simple</h3>
                    <p>Réservez un aliment en un clic et organisez la récupération</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">💬</div>
                    <h3>Chat intégré</h3>
                    <p>Communiquez directement avec les donneurs et receveurs</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">🔔</div>
                    <h3>Notifications</h3>
                    <p>Recevez des alertes pour les nouveaux aliments dans votre zone</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">🛡️</div>
                    <h3>Gestion admin</h3>
                    <p>Interface d'administration pour gérer les utilisateurs et le contenu</p>
                </div>
            </div>
        </div>
    </section>

    <!-- How it works -->
    <section id="howto" class="howto">
        <div class="container">
            <h2 class="section-title">Comment ça marche ?</h2>
            <div class="steps">
                <div class="step">
                    <div class="step-number">1</div>
                    <h3>Créez votre compte</h3>
                    <p>Inscrivez-vous gratuitement en quelques secondes</p>
                </div>
                <div class="step-arrow">→</div>
                <div class="step">
                    <div class="step-number">2</div>
                    <h3>Publiez ou cherchez</h3>
                    <p>Partagez vos aliments ou trouvez ce dont vous avez besoin</p>
                </div>
                <div class="step-arrow">→</div>
                <div class="step">
                    <div class="step-number">3</div>
                    <h3>Rencontrez & Partagez</h3>
                    <p>Coordonnez-vous via le chat et échangez</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Impact Section -->
    <section id="impact" class="impact">
        <div class="container">
            <div class="impact-content">
                <div class="impact-text">
                    <h2>Un petit geste, un grand impact</h2>
                    <p>
                        Chaque année, 10 millions de tonnes de nourriture sont gaspillées en France.
                        Ensemble, nous pouvons changer les choses.
                    </p>
                    <ul class="impact-list">
                        <li>✓ Réduisez votre empreinte carbone</li>
                        <li>✓ Économisez de l'argent</li>
                        <li>✓ Aidez votre communauté</li>
                        <li>✓ Luttez contre le gaspillage</li>
                    </ul>
                </div>
                <div class="impact-visual">
                    <div class="impact-circle">
                        <div class="circle-content">
                            <div class="circle-icon">🌍</div>
                            <div class="circle-text">Ensemble pour<br />la planète</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="container">
            <h2>Prêt à faire la différence ?</h2>
            <p>Rejoignez des milliers d'utilisateurs qui luttent contre le gaspillage alimentaire</p>
            <button class="btn-large btn-primary" onclick="window.location.href='/signin'">Commencer maintenant</button>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="logo">
                        <span class="logo-icon">🌱</span>
                        <span class="logo-text">EcoFoodSaver</span>
                    </div>
                    <p>Ensemble contre le gaspillage alimentaire</p>
                </div>
                <div class="footer-section">
                    <h4>Liens rapides</h4>
                    <a href="#">À propos</a>
                    <a href="#">Fonctionnalités</a>
                    <a href="#">Blog</a>
                </div>
                <div class="footer-section">
                    <h4>Support</h4>
                    <a href="#">FAQ</a>
                    <a href="#">Contact</a>
                    <a href="#">Confidentialité</a>
                </div>
                <div class="footer-section">
                    <h4>Suivez-nous</h4>
                    <div class="social-links">
                        <a href="#">Facebook</a>
                        <a href="#">Twitter</a>
                        <a href="#">Instagram</a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 EcoFoodSaver. Tous droits réservés.</p>
            </div>
        </div>
    </footer>
</div>


