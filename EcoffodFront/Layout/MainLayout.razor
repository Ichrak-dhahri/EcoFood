@inherits LayoutComponentBase
@inject NavigationManager Nav

<div class="page">

    @if (!IsLandingPage)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main class="@(IsLandingPage ? "full-width" : "")">
        @if (!IsLandingPage)
        {
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>

</div>

@code {
    private bool IsLandingPage =>
        Nav.Uri.EndsWith("/") || Nav.Uri.Contains("/index", StringComparison.OrdinalIgnoreCase) || Nav.Uri.Contains("/signin", StringComparison.OrdinalIgnoreCase)||Nav.Uri.Contains("signup", StringComparison.OrdinalIgnoreCase);
}
